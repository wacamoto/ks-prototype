mixin project_filter(active)
  div.projects-filter
    .container
      span.hidden-md-down
        a.all(class = active==1?"active":"",href="./projects.html") 所有
        a.most-view(class = active==2?"active":"",href="./projects_most_view.html") 最多瀏覽
        a.most-like(class = active==3?"active":"",href="./projects_most_like.html") 最多愛心
        a.feature(class = active==4?"active":"",href="./projects_feature.html") 特色專案
      span.hidden-lg-up.dropdown(style="display:inline")
        span.dropdown-toggle(data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          | 探索
        .dropdown-menu(aria-labelledby='dropdownMenuButton')
          a.dropdown-item(href='./projects_all.html') 所有
          a.dropdown-item(href='./projects_most_view.html') 最多瀏覽
          a.dropdown-item(href='./projects_most_like.html') 最多愛心
          a.dropdown-item(href='./projects_feature.html') 最具特色
      span.float-right
        a(class = active==5?"active":"",href="./projects_my.html") 我的專案


mixin project_card(project, type, my_project)
  .ks-cell.project-card
    .ks-card
      a.show(href="#")
        .ks-card-img(style="background-image:url('" + project.img + "')")
      a.code(href="#")
        i.fa.fa-code
      a.share(href="#")
        i.fa.fa-share
      if my_project
        a.delete.js-delete(href="#")
          i.fa.fa-trash
      .tags
        case type
          when 1
            span.views
              i.fa.fa-eye &nbsp;
              = Math.floor(Math.random()*500 + 50)
          when 2
            span.likes
              i.fa.fa-heart &nbsp;
              = Math.floor(Math.random()*50)
          when 3
            span.feature
              i.fa.fa-star
    .project-card-detail
      span.title= project.name 
      span.author
        | by 
        span(style="color:#25aff4") Pikachu


