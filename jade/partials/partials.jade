mixin course_card(course, type, my_course, index)
  .ks-cell
    .ks-card.course-card
      a(href="#")
        .ks-card-img(style="background-image: url('" + course.img + "')")
      .tags
        if index <= 3
          span.recommend 知識點推薦！
      span.title= course.name
      br
      if course.type == 'pay'
        button.ks-btn.ks-btn-yellow
          = Math.floor(Math.random()*1000 + 50)
          span(style="font-size: 0.5em") 人 &nbsp;
          i.fa.fa-long-arrow-right
      if course.type == 'register'
        .progress
          .progress-bar.progress-bar-striped.bg-warning(style="width:75%",role="progressbar",aria-valuenow="75",aria-valuemin="0",aria-valuemax="100")
        button.ks-btn
          | 繼續上課
      if course.type == 'free'
        button.ks-btn.ks-btn-green.free
          | 免費
          | &nbsp;
          i.fa.fa-long-arrow-right